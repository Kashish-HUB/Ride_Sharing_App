<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/ride_option_background"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/rideImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_ride"
        android:contentDescription="Ride Image"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/rideName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ride Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/ridePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="14sp"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/rideETA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ETA"
            android:textSize="14sp"
            android:textColor="@color/gray" />
    </LinearLayout>
</LinearLayout>
