<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/chooseRideTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Your Ride"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="@color/black" />

    <!-- RecyclerView for Ride Options -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rideOptionsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingVertical="8dp"
        android:overScrollMode="always"
        android:scrollbars="vertical" />

    <!-- Button to Confirm Ride Selection -->
    <Button
        android:id="@+id/confirmRideButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Ride"
        android:textSize="16sp"
        android:backgroundTint="@color/teal_700"
        android:textColor="@color/white"
        android:layout_marginTop="16dp" />

</LinearLayout>
